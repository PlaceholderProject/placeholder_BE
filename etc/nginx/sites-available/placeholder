# 1) HTTP 요청을 HTTPS로 리다이렉트
server {
    listen 80;
    server_name api.place-holder.site;

    # Let’s Encrypt 인증을 위한 ACME 챌린지 처리
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # 기타 요청은 HTTPS로 강제 이동
    return 301 https://$host$request_uri;
}

# 2) HTTPS 서버 블록
server {
    listen 443 ssl http2;
    server_name api.place-holder.site;

    # SSL 인증서 경로 (Certbot 발급)
    ssl_certificate     /etc/letsencrypt/live/api.place-holder.site/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.place-holder.site/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # 정적 파일 서빙
    location /static/ {
        alias /home/ubuntu/placeholder_BE/static/;
        access_log off;
        expires 30d;
    }

    location /media/ {
        alias /home/ubuntu/placeholder_BE/media/;
        access_log off;
        expires 30d;
    }

    # Django Ninja API 요청 프록시
    location / {
        include proxy_params;
        proxy_pass http://unix:/home/ubuntu/placeholder_BE/gunicorn.sock:;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout                 90;
    }
}
